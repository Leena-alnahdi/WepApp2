@{
    ViewBag.Title = "الأسئلة الشائعة - معمل الابتكارات";
    Layout = "_Layout_Bootstrap"; // فقط لإحضار النافقيشن
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <!-- CSS خاص بصفحتك -->
    <link href="~/css/faq.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
</head>

<body class="faq-body">

    <div id="faqPage" class="faq-body">
        <div class="faq-breadcrumb">
            <div class="faq-breadcrumb-container">
                <nav class="faq-breadcrumb-nav">
                    <a href="#" onclick="showPage('home')">
                        <i class="fas fa-home"></i>
                        الرئيسية
                    </a>
                    <span class="faq-breadcrumb-separator">/</span>
                    <span class="faq-breadcrumb-current">الأسئلة الشائعة</span>
                </nav>
            </div>
        </div>

        <div class="faq-main">
            <div class="faq-container">
                <div class="faq-header">
                    <h1><i class="fas fa-question-circle"></i> الأسئلة الشائعة</h1>
                    <p>إجابات على الأسئلة الأكثر شيوعاً حول معمل الابتكارات وخدماته</p>
                </div>

                <!-- البحث -->
                <div class="faq-section">
                    <h3><i class="fas fa-search"></i> البحث في الأسئلة الشائعة</h3>
                    <input type="text" id="faqSearch" placeholder="ابحث عن سؤال..." onkeyup="searchFAQ()" class="faq-search-input" />
                </div>

                <!-- الأقسام -->
                <div id="faqCategories">

                    <!-- 🟢 قسم الحجز والاستخدام -->
                    <div class="faq-section faq-category">
                        <h3><i class="fas fa-calendar-plus"></i> أسئلة الحجز والاستخدام</h3>
                        <div class="faq-list">
                            <div class="faq-item">
                                <div class="faq-question" onclick="toggleFAQ(this)">
                                    <h5>كيف أقوم بحجز جهاز في المعمل؟</h5>
                                    <i class="fas fa-chevron-down"></i>
                                </div>
                                <div class="faq-answer">
                                    <ol>
                                        <li>تسجيل الدخول بحسابك الجامعي</li>
                                        <li>الضغط على زر "احجز الآن"</li>
                                        <li>اختيار نوع الطلب "حجز"</li>
                                        <li>اختيار فئة الجهاز والجهاز المحدد</li>
                                        <li>تحديد التاريخ والوقت المطلوب</li>
                                        <li>ملء تفاصيل الحجز وإرساله</li>
                                    </ol>
                                </div>
                            </div>
                            <div class="faq-item">
                                <div class="faq-question" onclick="toggleFAQ(this)">
                                    <h5>كم تستغرق مراجعة طلب الحجز؟</h5>
                                    <i class="fas fa-chevron-down"></i>
                                </div>
                                <div class="faq-answer">
                                    <p>خلال 24 ساعة عمل عادةً، أو أسرع للحالات العاجلة.</p>
                                </div>
                            </div>
                            <div class="faq-item">
                                <div class="faq-question" onclick="toggleFAQ(this)">
                                    <h5>هل يمكنني تعديل أو إلغاء حجزي؟</h5>
                                    <i class="fas fa-chevron-down"></i>
                                </div>
                                <div class="faq-answer">
                                    <ul>
                                        <li>من صفحة "حجوزاتي"</li>
                                        <li>اختر الحجز المطلوب</li>
                                        <li>اضغط "تعديل" أو "إلغاء"</li>
                                    </ul>
                                    <p><strong>ملاحظة:</strong> لا يمكن التعديل بعد الموافقة على الطلب.</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- 🟡 قسم الأجهزة والتقنيات -->
                    <div class="faq-section faq-category">
                        <h3><i class="fas fa-laptop"></i> أسئلة الأجهزة والتقنيات</h3>
                        <div class="faq-list">
                            <div class="faq-item">
                                <div class="faq-question" onclick="toggleFAQ(this)">
                                    <h5>ما الأجهزة المتوفرة؟</h5>
                                    <i class="fas fa-chevron-down"></i>
                                </div>
                                <div class="faq-answer">
                                    <ul>
                                        <li>VR: Oculus Quest 2, HTC Vive</li>
                                        <li>AR: HoloLens 2, iPad Pro</li>
                                        <li>روبوتات: NAO, Arduino kits</li>
                                        <li>طابعات ثلاثية: Ultimaker, Formlabs</li>
                                        <li>استوديو: كاميرات وإضاءة</li>
                                        <li>ذكاء صناعي: Jetson Xavier</li>
                                    </ul>
                                </div>
                            </div>
                            <div class="faq-item">
                                <div class="faq-question" onclick="toggleFAQ(this)">
                                    <h5>هل يمكن استعارة الأجهزة خارج المعمل؟</h5>
                                    <i class="fas fa-chevron-down"></i>
                                </div>
                                <div class="faq-answer">
                                    <p>نعم لبعض الأجهزة المحمولة مثل:</p>
                                    <ul>
                                        <li>iPad Pro</li>
                                        <li>Arduino Kits</li>
                                        <li>الكاميرات</li>
                                    </ul>
                                    <p>يتم ذلك بعد الموافقة وقد يتطلب ضمان.</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- 🔵 قسم الدعم التقني -->
                    <div class="faq-section faq-category">
                        <h3><i class="fas fa-tools"></i> الدعم التقني والمساعدة</h3>
                        <div class="faq-list">
                            <div class="faq-item">
                                <div class="faq-question" onclick="toggleFAQ(this)">
                                    <h5>هل يوجد دعم فني في المعمل؟</h5>
                                    <i class="fas fa-chevron-down"></i>
                                </div>
                                <div class="faq-answer">
                                    <p>نعم، يتوفر دعم في:</p>
                                    <ul>
                                        <li>تشغيل الأجهزة</li>
                                        <li>حل الأعطال التقنية</li>
                                        <li>التدريب الأولي</li>
                                    </ul>
                                </div>
                            </div>
                            <div class="faq-item">
                                <div class="faq-question" onclick="toggleFAQ(this)">
                                    <h5>كيف أحجز استشارة فنية؟</h5>
                                    <i class="fas fa-chevron-down"></i>
                                </div>
                                <div class="faq-answer">
                                    <ol>
                                        <li>ادخل صفحة الطلبات</li>
                                        <li>اختر نوع الطلب "استشارة"</li>
                                        <li>حدد التحدي التقني</li>
                                        <li>اختر الموعد</li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- 🟣 قسم الأسئلة العامة -->
                    <div class="faq-section faq-category">
                        <h3><i class="fas fa-info-circle"></i> أسئلة عامة</h3>
                        <div class="faq-list">
                            <div class="faq-item">
                                <div class="faq-question" onclick="toggleFAQ(this)">
                                    <h5>من يحق له استخدام المعمل؟</h5>
                                    <i class="fas fa-chevron-down"></i>
                                </div>
                                <div class="faq-answer">
                                    <ul>
                                        <li>طلاب الجامعة</li>
                                        <li>أعضاء هيئة التدريس</li>
                                        <li>الباحثون المعتمدون</li>
                                    </ul>
                                </div>
                            </div>
                            <div class="faq-item">
                                <div class="faq-question" onclick="toggleFAQ(this)">
                                    <h5>ما هي ساعات العمل؟</h5>
                                    <i class="fas fa-chevron-down"></i>
                                </div>
                                <div class="faq-answer">
                                    <p>من الأحد إلى الخميس: 8 صباحًا حتى 4 مساءً</p>
                                    <p>الجمعة والسبت: مغلق</p>
                                </div>
                            </div>
                            <div class="faq-item">
                                <div class="faq-question" onclick="toggleFAQ(this)">
                                    <h5>هل هناك رسوم؟</h5>
                                    <i class="fas fa-chevron-down"></i>
                                </div>
                                <div class="faq-answer">
                                    <p>الخدمات مجانية، ولكن:</p>
                                    <ul>
                                        <li>مواد الطباعة 3D برسوم رمزية</li>
                                        <li>الاستعارات الطويلة تحتاج ضمان</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- 📨 تواصل معنا -->
                <div class="faq-section">
                    <h3><i class="fas fa-question"></i> لم تجد إجابة لسؤالك؟</h3>
                    <p style="color: #666;">إذا لم تجد إجابة لسؤالك، يمكنك التواصل معنا مباشرة</p>
                    <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
                        <button class="faq-btn faq-btn-primary" onclick="showPage('contact')">
                            <i class="fas fa-envelope"></i> اتصل بنا
                        </button>
                        <button class="faq-btn faq-btn-outline" onclick="openModal('contactModal')">
                         
                        </button>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <script>
        function toggleFAQ(element) {
            element.classList.toggle("active");
            const answer = element.nextElementSibling;
            answer.style.display = answer.style.display === "block" ? "none" : "block";
        }

        function searchFAQ() {
            const input = document.getElementById("faqSearch").value.toLowerCase();
            const items = document.querySelectorAll(".faq-item");
            items.forEach(item => {
                const question = item.querySelector(".faq-question h5").innerText.toLowerCase();
                item.style.display = question.includes(input) ? "block" : "none";
            });
        }
    </script>
</body>
</html>
