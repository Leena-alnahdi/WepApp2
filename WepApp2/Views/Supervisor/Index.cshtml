@{
    ViewBag.Title = "صفحة المشرف";
}

<style>
    /* Modal Styles */
    #overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 1000;
    }


    #rejectModal {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: white;
        padding: 25px;
        border-radius: 8px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        z-index: 1001;
        width: 90%;
        max-width: 500px;
        font-family: 'Tajawal', sans-serif;
    }

        #rejectModal h3 {
            color: #e53e3e;
            font-weight: bold;
            border-bottom: 2px solid #e53e3e;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }

        #rejectModal label {
            font-weight: bold;
            color: #333;
        }

        #rejectModal textarea {
            border: 2px solid #ddd;
            border-radius: 6px;
            font-family: 'Tajawal', sans-serif;
        }

            #rejectModal textarea:focus {
                border-color: #e53e3e;
                box-shadow: 0 0 0 0.2rem rgba(220, 38, 38, 0.25);
            }

    /* Button Custom Colors */
    .approve-btn {
        background-color: #38a169 !important;
        border-color: #38a169 !important;
        color: white !important;
    }

        .approve-btn:hover {
            background-color: #2f855a !important;
            border-color: #2f855a !important;
        }

        .approve-btn:focus, .approve-btn:active {
            background-color: #276749 !important;
            border-color: #276749 !important;
            box-shadow: 0 0 0 0.2rem rgba(56, 161, 105, 0.25) !important;
        }

    .reject-btn {
        background-color: #e53e3e !important;
        border-color: #e53e3e !important;
        color: white !important;
    }

        .reject-btn:hover {
            background-color: #c53030 !important;
            border-color: #c53030 !important;
        }

        .reject-btn:focus, .reject-btn:active {
            background-color: #9c2626 !important;
            border-color: #9c2626 !important;
            box-shadow: 0 0 0 0.2rem rgba(229, 62, 62, 0.25) !important;
        }
</style>

<h2 class="mb-4">إدارة الطلبات</h2>
