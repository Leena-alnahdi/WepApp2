@model List<WepApp2.Models.RequestReportViewModel>
@{
    Layout = null;
    var selectedFields = ViewBag.SelectedFields as List<string> ?? new List<string>();
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.ReportTitle</title>
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Tajawal', sans-serif;
            margin: 40px;
            color: #333;
            direction: rtl;
        }

        .report-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .report-title {
            font-size: 28px;
            font-weight: bold;
            margin-bottom: 10px;
            color: #2c3e50;
        }

        .report-subtitle {
            font-size: 20px;
            color: #34495e;
            margin-bottom: 10px;
        }

        .report-meta {
            text-align: center;
            font-size: 14px;
            margin-bottom: 20px;
            color: #7f8c8d;
        }

        .report-table {
            width: 100%;
            border-collapse: collapse;
            direction: rtl;
            margin-top: 20px;
        }

            .report-table th,
            .report-table td {
                border: 1px solid #ccc;
                padding: 8px;
                text-align: center;
            }

            .report-table th {
                background-color: #eaf5ea;
                font-weight: bold;
                color: #2c3e50;
            }

            .report-table tbody tr:nth-child(even) {
                background-color: #f9f9f9;
            }

            .report-table tbody tr:hover {
                background-color: #f0f0f0;
            }

        .status-badge {
            padding: 4px 10px;
            border-radius: 6px;
            color: white;
            font-size: 13px;
            display: inline-block;
            font-weight: 500;
        }

        .status-new {
            background-color: #3498db;
        }

        .status-assigned {
            background-color: #f39c12;
        }

        .status-approved {
            background-color: #27ae60;
        }

        .status-rejected {
            background-color: #e74c3c;
        }

        .status-completed {
            background-color: #95a5a6;
        }

        .report-footer {
            margin-top: 30px;
            font-size: 12px;
            text-align: center;
            color: gray;
        }

        .print-button {
            display: block;
            margin: 30px auto 10px;
            padding: 10px 20px;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 6px;
            font-size: 16px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .print-button:hover {
                background-color: #146c43;
                transform: scale(1.05);
            }

        @@media print {
            .print-button {
                display: none;
            }

            body {
                margin: 20px;
            }
        }
    </style>
</head>
<body>
    <div class="report-header">
        <h1 class="report-title">@ViewBag.ReportTitle</h1>
        <h2 class="report-subtitle">@ViewBag.ReportType</h2>
        <div class="report-meta">
            @if (ViewBag.FromDate != null && ViewBag.ToDate != null)
            {
                <span>التقرير من تاريخ @ViewBag.FromDate إلى @ViewBag.ToDate</span>
            }
        </div>
    </div>

    <table class="report-table">
        <thead>
            <tr>
                @if (selectedFields.Count == 0 || selectedFields.Contains("المستفيد"))
                {
                    <th>المستفيد</th>
                }
                @if (selectedFields.Count == 0 || selectedFields.Contains("نوع الخدمة"))
                {
                    <th>نوع الخدمة</th>
                }
                @if (selectedFields.Count == 0 || selectedFields.Contains("الجهاز"))
                {
                    <th>الجهاز</th>
                }
                @if (selectedFields.Count == 0 || selectedFields.Contains("التاريخ"))
                {
                    <th>التاريخ</th>
                }
                @if (selectedFields.Count == 0 || selectedFields.Contains("الوقت"))
                {
                    <th>الوقت</th>
                }
                @if (selectedFields.Count == 0 || selectedFields.Contains("المشرف المسند"))
                {
                    <th>المشرف المسند</th>
                }
                @if (selectedFields.Count == 0 || selectedFields.Contains("الحالة"))
                {
                    <th>الحالة</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @if (selectedFields.Count == 0 || selectedFields.Contains("المستفيد"))
                    {
                        <td>@item.المستفيد</td>
                    }
                    @if (selectedFields.Count == 0 || selectedFields.Contains("نوع الخدمة"))
                    {
                        <td>@item.نوع_الخدمة</td>
                    }
                    @if (selectedFields.Count == 0 || selectedFields.Contains("الجهاز"))
                    {
                        <td>@item.الجهاز</td>
                    }
                    @if (selectedFields.Count == 0 || selectedFields.Contains("التاريخ"))
                    {
                        <td>@item.التاريخ</td>
                    }
                    @if (selectedFields.Count == 0 || selectedFields.Contains("الوقت"))
                    {
                        <td>@item.الوقت</td>
                    }
                    @if (selectedFields.Count == 0 || selectedFields.Contains("المشرف المسند"))
                    {
                        <td>@item.المشرف_المسند</td>
                    }
                    @if (selectedFields.Count == 0 || selectedFields.Contains("الحالة"))
                    {
                        <td>
                            @{
                                string statusClass = "";
                                switch (item.الحالة)
                                {
                                    case "جديد":
                                        statusClass = "status-new";
                                        break;
                                    case "مسند":
                                        statusClass = "status-assigned";
                                        break;
                                    case "موافق عليه":
                                    case "موافق من المشرف":
                                        statusClass = "status-approved";
                                        break;
                                    case "مرفوض من المشرف":
                                        statusClass = "status-rejected";
                                        break;
                                    case "منتهي":
                                        statusClass = "status-completed";
                                        break;
                                    default:
                                        statusClass = "";
                                        break;
                                }
                            }
                            <span class="status-badge @statusClass">@item.الحالة</span>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>

    <div class="report-footer">
        <p>تم إنشاء هذا التقرير بواسطة نظام تقارير معمل الابتكارات - @DateTime.Now.ToString("yyyy-MM-dd HH:mm")</p>
    </div>

    <button class="print-button" onclick="window.print()">طباعة التقرير</button>
</body>
</html>