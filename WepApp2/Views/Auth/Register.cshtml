@model WepApp2.Models.User
@{
    Layout = null;
    ViewData["Title"] = "إنشاء حساب - معمل الابتكارات"; 
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <style>
        body {
            background: radial-gradient(circle, #148d47, #035321);
            font-family: 'Tajawal', sans-serif;
        }

        .auth-box {
            background-color: white;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.2);
            max-width: 600px;
            margin: 50px auto;
        }

        .btn-success {
            background-color: #148d47;
            border: none;
        }

            .btn-success:hover {
                background-color: #0d7c3a;
            }
    </style>
</head>
<body>
    <div class="text-center text-white mt-4">
        <h1>شعـا</h1>
        <h2>معمل الابتكارات</h2>
        <h6>جامعة الملك عبدالعزيز</h6>
    </div>

    <div class="auth-box text-center">
        <div class="d-flex justify-content-center mb-4">
            <a href="/Auth/Register" class="btn btn-success me-2">إنشاء حساب</a>
            <a href="/Auth/Index" class="btn btn-outline-secondary">تسجيل الدخول</a>
        </div>
        <form method="post" asp-action="Register">
            <div class="row text-end">
                <div class="col-md-6 mb-3">
                    <label asp-for="FirstName">الاسم الأول:</label>
                    <input asp-for="FirstName" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="LastName">الاسم الأخير:</label>
                    <input asp-for="LastName" class="form-control" />
                </div>
                <div class="col-md-12 mb-3">
                    <label asp-for="Email">البريد الإلكتروني الجامعي:</label>
                    <input asp-for="Email" class="form-control" placeholder="example@stu.kau.edu.sa" />
                </div>
                <div class="col-md-12 mb-3">
                    <label asp-for="PhoneNumber">رقم الهاتف:</label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="+966 5xxxxxxxx" />
                </div>
                <div class="col-md-12 mb-3">
                    <label asp-for="UserName">اسم المستخدم:</label>
                    <input asp-for="UserName" class="form-control" placeholder="الرقم الجامعي/الوظيفي" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Faculty">الكلية:</label>
                    <select asp-for="Faculty" class="form-control">
                        <option value="">اختر الكلية</option>
                        <option value="الحاسبات">كلية الحاسبات</option>
                        <option value="الهندسة">كلية الهندسة</option>
                        <!-- أضف المزيد -->
                    </select>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Department">القسم:</label>
                    <select asp-for="Department" class="form-control">
                        <option value="">اختر القسم</option>
                        <option value="علوم الحاسب">علوم الحاسب</option>
                        <option value="هندسة ميكانيكية">هندسة ميكانيكية</option>
                        <!-- أضف المزيد -->
                    </select>
                </div>
                <div class="col-md-12 mb-3">
                    <label asp-for="Role">نوع المستخدم:</label>
                    <select asp-for="Role" class="form-control">
                        <option value="">اختر نوع المستخدم</option>
                        <option value="طالب">طالب</option>
                        <option value="عضو هيئة تدريس">عضو هيئة تدريس</option>
                        <option value="مشرف">مشرف</option>
                    </select>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="PassWord">كلمة المرور:</label>
                    <input asp-for="PassWord" type="password" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label>تأكيد كلمة المرور:</label>
                    <input name="ConfirmPassword" type="password" class="form-control" />
                </div>
            </div>
            <div class="form-check text-end mb-3">
                <input class="form-check-input" type="checkbox" id="terms" />
                <label class="form-check-label" for="terms">
                    أوافق على <a href="#">الشروط والأحكام</a> وسياسة الخصوصية
                </label>
            </div>
            <button type="submit" class="btn btn-success w-100"><i class="fa fa-user-plus"></i> إنشاء الحساب</button>
        </form>
    </div>
</body>
</html>
