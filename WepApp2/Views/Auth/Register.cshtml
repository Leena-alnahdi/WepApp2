@model WepApp2.Models.User
@{
    Layout = null;
    ViewData["Title"] = "إنشاء حساب - معمل الابتكارات";
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@300;400;500;700&display=swap" rel="stylesheet">
    <style>
        * {
            direction: rtl;
            text-align: right;
        }

        body {
            background: linear-gradient(135deg, #38a169 0%, #2d8a57 50%, #1e5f3a 100%);
            font-family: 'Tajawal', sans-serif;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .header-title {
            text-align: center;
            color: white;
            margin-bottom: 30px;
            text-shadow: 0 2px 4px rgba(0,0,0,0.3);
        }

        .logo-container {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 15px;
        }

        .logo {
            max-width: 200px;
            max-height: 120px;
            width: auto;
            height: auto;
            filter: drop-shadow(0 4px 8px rgba(0,0,0,0.3));
            transition: all 0.3s ease;
        }

            .logo:hover {
                transform: scale(1.05);
                filter: drop-shadow(0 6px 12px rgba(0,0,0,0.4));
            }

        .header-title h1 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 5px;
        }

        .header-title h2 {
            font-size: 1.5rem;
            font-weight: 500;
            margin-bottom: 5px;
        }

        .header-title h6 {
            font-size: 1rem;
            font-weight: 300;
            opacity: 0.9;
        }

        .auth-box {
            background: rgba(255, 255, 255, 0.98);
            padding: 50px 40px;
            border-radius: 25px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.3);
            max-width: 700px;
            margin: 0 auto;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .nav-tabs-custom {
            border: none;
            background: #f8f9fa;
            border-radius: 15px;
            padding: 8px;
            margin-bottom: 30px;
            box-shadow: inset 0 2px 5px rgba(0,0,0,0.1);
        }

            .nav-tabs-custom .nav-link {
                border: none;
                background: transparent;
                color: #6c757d;
                font-weight: 500;
                padding: 12px 25px;
                border-radius: 12px;
                transition: all 0.3s ease;
                text-decoration: none;
                margin: 0 3px;
            }

                .nav-tabs-custom .nav-link.active {
                    background: #38a169;
                    color: white;
                    box-shadow: 0 3px 8px rgba(56, 161, 105, 0.3);
                    transform: translateY(-1px);
                }

                .nav-tabs-custom .nav-link:hover:not(.active) {
                    background: rgba(56, 161, 105, 0.1);
                    color: #38a169;
                }

        .form-label {
            font-weight: 500;
            color: #2c3e50;
            margin-bottom: 8px;
            display: block;
            text-align: right;
        }

        .form-control, .form-select {
            border: 2px solid #e9ecef;
            border-radius: 12px;
            padding: 12px 16px;
            font-size: 16px;
            transition: all 0.3s ease;
            background: #f8f9fa;
            text-align: right;
            direction: rtl;
        }

            .form-control:focus, .form-select:focus {
                border-color: #38a169;
                box-shadow: 0 0 0 0.2rem rgba(56, 161, 105, 0.25);
                background: white;
            }

            .form-control::placeholder {
                color: #adb5bd;
                text-align: right;
            }

        .form-check {
            text-align: right;
            margin-bottom: 25px;
        }

        .form-check-input {
            margin-left: 0;
            margin-right: 0.5rem;
            float: right;
        }

        .form-check-label {
            color: #6c757d;
            font-weight: 400;
        }

        .btn-success {
            background: linear-gradient(45deg, #38a169, #2d8a57);
            border: none;
            color: white;
            padding: 14px 30px;
            font-size: 16px;
            font-weight: 600;
            border-radius: 12px;
            width: 100%;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(56, 161, 105, 0.3);
            position: relative;
            overflow: hidden;
        }

            .btn-success::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(45deg, transparent, rgba(255,255,255,0.2), transparent);
                transition: left 0.5s ease;
            }

            .btn-success:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(56, 161, 105, 0.4);
                background: linear-gradient(45deg, #2d8a57, #1e5f3a);
            }

                .btn-success:hover::before {
                    left: 100%;
                }

            .btn-success:active {
                transform: translateY(0);
            }

        .btn-outline-secondary {
            border: 2px solid #6c757d;
            color: #6c757d;
            background: transparent;
            padding: 12px 25px;
            font-weight: 500;
            border-radius: 12px;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }

            .btn-outline-secondary:hover {
                background: #6c757d;
                color: white;
                transform: translateY(-1px);
                box-shadow: 0 4px 15px rgba(108, 117, 125, 0.3);
            }

        .mb-3 {
            margin-bottom: 20px;
        }

        @@media (max-width: 576px) {
            .auth-box {
                margin: 20px;
                padding: 30px 25px;
            }

            .logo {
                max-width: 150px;
                max-height: 90px;
            }

            .nav-tabs-custom .nav-link {
                padding: 10px 15px;
                font-size: 14px;
            }
        }

        /* تحسين الأيقونات */
        .fa-user-plus {
            margin-left: 8px;
        }

        /* تأثير الحركة للصفحة */
        .auth-box {
            animation: slideUp 0.6s ease-out;
        }

        @@keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .header-title {
            animation: fadeIn 0.8s ease-out;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* تنسيق الروابط */
        a {
            color: #38a169;
            text-decoration: none;
            transition: all 0.3s ease;
        }

            a:hover {
                color: #2d8a57;
                text-decoration: underline;
            }

        /* تنسيق الزر المعطل */
        .btn-success:disabled {
            background: #cccccc !important;
            cursor: not-allowed;
            opacity: 0.6;
            box-shadow: none !important;
        }

            .btn-success:disabled:hover {
                transform: none !important;
                box-shadow: none !important;
                background: #cccccc !important;
            }

            .btn-success:disabled::before {
                display: none;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="header-title">
            <div class="logo-container">
                <img src="~/Images/logo.png" alt="شعار معمل الابتكارات" class="logo" />
            </div>
        </div>

        <div class="auth-box">
            <div class="nav-tabs-custom d-flex">
                <a href="/Auth/Login" class="nav-link flex-fill text-center">
                    <i class="fas fa-sign-in-alt me-2"></i>
                    تسجيل الدخول
                </a>
                <a href="/Auth/Register" class="nav-link active flex-fill text-center">
                    <i class="fas fa-user-plus me-2"></i>
                    إنشاء حساب
                </a>
            </div>

            @if (ViewBag.PasswordMismatch == true)
            {
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    كلمتا المرور غير متطابقتين. يرجى التأكد من كتابة نفس كلمة المرور في الحقلين.
                </div>
            }

            @if (ViewBag.PasswordEmpty == true)
            {
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    يرجى إدخال كلمة مرور صحيحة.
                </div>
            }

            @if (ViewBag.UserExists == true)
            {
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    يوجد مستخدم مسجل بنفس اسم المستخدم أو البريد الإلكتروني.
                </div>
            }

            <div id="termsError" class="alert alert-warning" style="display: none;">
                <i class="fas fa-exclamation-triangle me-2"></i>
                يجب الموافقة على الشروط والأحكام قبل إنشاء الحساب
            </div>

            <form method="post" asp-action="Register">
                <div class="row text-end">
                    <div class="col-md-6 mb-3">
                        <label asp-for="FirstName" class="form-label">
                            <i class="fas fa-user me-2"></i>
                            الاسم الأول:
                        </label>
                        <input asp-for="FirstName" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="LastName" class="form-label">
                            <i class="fas fa-user me-2"></i>
                            الاسم الأخير:
                        </label>
                        <input asp-for="LastName" class="form-control" />
                    </div>
                    <div class="col-md-12 mb-3">
                        <label asp-for="Email" class="form-label">
                            <i class="fas fa-envelope me-2"></i>
                            البريد الإلكتروني الجامعي:
                        </label>
                        <input asp-for="Email" class="form-control" placeholder="example@stu.kau.edu.sa" />
                    </div>
                    <div class="col-md-12 mb-3">
                        <label asp-for="PhoneNumber" class="form-label">
                            <i class="fas fa-phone me-2"></i>
                            رقم الهاتف:
                        </label>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="+966 5xxxxxxxx" />
                    </div>
                    <div class="col-md-12 mb-3">
                        <label asp-for="UserName" class="form-label">
                            <i class="fas fa-id-card me-2"></i>
                            اسم المستخدم:
                        </label>
                        <input asp-for="UserName" class="form-control" placeholder="الرقم الجامعي/الوظيفي" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Faculty" class="form-label">
                            <i class="fas fa-university me-2"></i>
                            الجهة:
                        </label>
                        <select asp-for="Faculty" class="form-control" id="facultySelect" onchange="toggleOtherField()">
                            <option value="">اختر الجهة</option>
                            <option value="كلية الطب">كلية الطب</option>
                            <option value="كلية طب الأسنان">كلية طب الأسنان</option>
                            <option value="كلية الصيدلة">كلية الصيدلة</option>
                            <option value="كلية العلوم الطبية التطبيقية">كلية العلوم الطبية التطبيقية</option>
                            <option value="كلية التمريض">كلية التمريض</option>
                            <option value="كلية علوم التأهيل الطبي">كلية علوم التأهيل الطبي</option>
                            <option value="كلية الصحة العامة والمعلوماتية الصحية">كلية الصحة العامة والمعلوماتية الصحية</option>
                            <option value="كلية الهندسة">كلية الهندسة</option>
                            <option value="كلية العلوم">كلية العلوم</option>
                            <option value="كلية الحاسبات وتقنية المعلومات">كلية الحاسبات وتقنية المعلومات</option>
                            <option value="كلية تصاميم البيئة">كلية تصاميم البيئة</option>
                            <option value="كلية علوم البحار">كلية علوم البحار</option>
                            <option value="كلية الأرصاد والبيئة وزراعة المناطق الجافة">كلية الأرصاد والبيئة وزراعة المناطق الجافة</option>
                            <option value="كلية علوم الأرض">كلية علوم الأرض</option>
                            <option value="كلية الاقتصاد والإدارة">كلية الاقتصاد والإدارة</option>
                            <option value="كلية إدارة الأعمال">كلية إدارة الأعمال</option>
                            <option value="كلية الآداب والعلوم الإنسانية">كلية الآداب والعلوم الإنسانية</option>
                            <option value="كلية التربية">كلية التربية</option>
                            <option value="كلية الدراسات العليا التربوية">كلية الدراسات العليا التربوية</option>
                            <option value="كلية علوم الإنسان والتصاميم">كلية علوم الإنسان والتصاميم</option>
                            <option value="كلية الاتصال والإعلام">كلية الاتصال والإعلام</option>
                            <option value="كلية السياحة">كلية السياحة</option>
                            <option value="كلية القانون">كلية القانون</option>
                            <option value="الكلية التطبيقية">الكلية التطبيقية</option>
                            <option value="كلية المجتمع">كلية المجتمع</option>
                            <option value="عمادة التعليم عن بعد والتعليم الإلكتروني">عمادة التعليم عن بعد والتعليم الإلكتروني</option>
                            <option value="أخرى">أخرى</option>
                        </select>
                        <div id="otherFacultyDiv" style="display: none;" class="mt-2">
                            <input type="text" id="otherFacultyInput" class="form-control" placeholder="اكتب اسم الجهة" />
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Department" class="form-label">
                            <i class="fas fa-building me-2"></i>
                            القسم:
                        </label>
                        <input asp-for="Department" class="form-control" placeholder="اكتب اسم القسم" />
                    </div>
                    <div class="col-md-12 mb-3">
                        <label asp-for="Role" class="form-label">
                            <i class="fas fa-users me-2"></i>
                            نوع المستخدم:
                        </label>
                        <select asp-for="Role" class="form-control">
                            <option value="">اختر نوع المستخدم</option>
                            <option value="طالب">طالب</option>
                            <option value="عضو هيئة تدريس">عضو هيئة تدريس</option>
                        </select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="PassWord" class="form-label">
                            <i class="fas fa-lock me-2"></i>
                            كلمة المرور:
                        </label>
                        <input asp-for="PassWord" type="password" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">
                            <i class="fas fa-lock me-2"></i>
                            تأكيد كلمة المرور:
                        </label>
                        <input name="ConfirmPassword" type="password" class="form-control" />
                    </div>
                </div>
                <div class="form-check mb-3" style="text-align: right; direction: rtl;">
                    <input class="form-check-input" type="checkbox" id="terms" style="float: right; margin-right: 0; margin-left: 0.5rem;" required />
                    <label class="form-check-label" for="terms" style="text-align: right;">
                        <i class="fas fa-check-circle me-1"></i>
                        أوافق على <a href="#">الشروط والأحكام</a> وسياسة الخصوصية
                    </label>
                </div>
                <button type="submit" class="btn btn-success w-100" id="submitBtn" disabled>
                    <i class="fa fa-user-plus"></i>
                    إنشاء الحساب
                </button>
            </form>
        </div>
    </div>

    <script>
        function toggleOtherField() {
            const facultySelect = document.getElementById('facultySelect');
            const otherDiv = document.getElementById('otherFacultyDiv');
            const otherInput = document.getElementById('otherFacultyInput');
            const hiddenFacultyField = document.querySelector('input[name="Faculty"]');

            if (facultySelect.value === 'أخرى') {
                otherDiv.style.display = 'block';
                otherInput.required = true;

                // إضافة event listener لتحديث القيمة المخفية
                otherInput.addEventListener('input', function() {
                    // إنشاء حقل مخفي إذا لم يكن موجوداً
                    if (!hiddenFacultyField) {
                        const hiddenInput = document.createElement('input');
                        hiddenInput.type = 'hidden';
                        hiddenInput.name = 'Faculty';
                        facultySelect.parentNode.appendChild(hiddenInput);
                    }
                    document.querySelector('input[name="Faculty"]').value = this.value;
                });
            } else {
                otherDiv.style.display = 'none';
                otherInput.required = false;
                otherInput.value = '';

                // إزالة الحقل المخفي إذا كان موجوداً
                if (hiddenFacultyField) {
                    hiddenFacultyField.remove();
                }
            }
        }

        // التأكد من إخفاء الحقل عند تحميل الصفحة
        document.addEventListener('DOMContentLoaded', function() {
            const otherDiv = document.getElementById('otherFacultyDiv');
            otherDiv.style.display = 'none';

            // إضافة التحكم في زر الإرسال بناءً على الموافقة على الشروط
            const termsCheckbox = document.getElementById('terms');
            const submitBtn = document.getElementById('submitBtn');

            termsCheckbox.addEventListener('change', function() {
                submitBtn.disabled = !this.checked;
                // إخفاء رسالة الخطأ عند تحديد الموافقة
                if (this.checked) {
                    document.getElementById('termsError').style.display = 'none';
                }
            });

            // إضافة حدث للنقر على الزر المعطل
            submitBtn.addEventListener('click', function(e) {
                if (!termsCheckbox.checked) {
                    e.preventDefault();
                    document.getElementById('termsError').style.display = 'block';
                    // التمرير لأعلى لرؤية رسالة الخطأ
                    document.getElementById('termsError').scrollIntoView({ behavior: 'smooth' });
                }
            });
        });
    </script>
</body>
</html>