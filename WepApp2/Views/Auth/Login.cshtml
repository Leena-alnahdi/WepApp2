@model WepApp2.Models.User
@{
    Layout = null;
    ViewData["Title"] = "تسجيل الدخول - معمل الابتكارات";
    var loginFailed = ViewBag.LoginFailed as bool? ?? false; 
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <style>
        body {
            background: radial-gradient(circle, #148d47, #035321);
            font-family: 'Tajawal', sans-serif;
        }

        .auth-box {
            background-color: white;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.2);
            max-width: 500px;
            margin: 50px auto;
        }

        .btn-success {
            background-color: #148d47;
            border: none;
        }

            .btn-success:hover {
                background-color: #0d7c3a;
            }
    </style>
</head>
<body>
    <div class="text-center text-white mt-4">
        <h1>شعـا</h1>
        <h2>معمل الابتكارات</h2>
        <h6>جامعة الملك عبدالعزيز</h6>
    </div>

    <div class="auth-box text-center">
        <div class="d-flex justify-content-center mb-4">
            <a href="/Auth/Index" class="btn btn-outline-secondary me-2">تسجيل الدخول</a>
            <a href="/Auth/Register" class="btn btn-success">إنشاء حساب</a>
        </div>

        @if (loginFailed)
        {
            <div class="alert alert-danger text-end">
                اسم المستخدم أو كلمة المرور غير صحيحة.
            </div>
        }

        <form method="post" asp-action="Login">
            @Html.AntiForgeryToken()
            <div class="mb-3 text-end">
                <label asp-for="UserName" class="form-label">اسم المستخدم:</label>
                <input asp-for="UserName" class="form-control" placeholder="اسم المستخدم" />
            </div>
            <div class="mb-3 text-end">
                <label asp-for="PassWord" class="form-label">كلمة المرور:</label>
                <input asp-for="PassWord" class="form-control" type="password" placeholder="كلمة المرور" />
            </div>
            <div class="form-check text-end mb-3">
                <input type="checkbox" class="form-check-input" id="rememberMe" />
                <label class="form-check-label" for="rememberMe">تذكرني</label>
            </div>
            <button type="submit" class="btn btn-success w-100"><i class="fa fa-sign-in-alt"></i> تسجيل الدخول</button>
            <div class="mt-3">
                <a href="#">نسيت كلمة المرور؟</a>
            </div>
        </form>
    </div>
</body>
</html>
