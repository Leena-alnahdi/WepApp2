
@model WepApp2.Models.User
@{
    Layout = null;
    ViewData["Title"] = "تسجيل الدخول - معمل الابتكارات";
    var loginFailed = ViewBag.LoginFailed as bool? ?? false;
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link href="~/css/wil-auth-styles.css" rel="stylesheet" />
</head>
<body class="wil-auth-page">
    <div class="container">
        <div class="wil-auth-header">
            <div class="wil-logo-container">
                <img src="~/Images/logo.png" alt="شعار معمل الابتكارات" class="wil-logo" />
            </div>
        </div>

        <div class="wil-auth-box">
            <div class="wil-nav-tabs wil-d-flex">
                <a href="/Auth/Index" class="wil-nav-link wil-nav-link--active wil-flex-fill wil-text-center">
                    <i class="fas fa-sign-in-alt wil-icon-spacing-sm"></i>
                    تسجيل الدخول
                </a>
                <a href="/Auth/Register" class="wil-nav-link wil-flex-fill wil-text-center">
                    <i class="fas fa-user-plus wil-icon-spacing-sm"></i>
                    إنشاء حساب
                </a>
            </div>

            @if (loginFailed)
            {
                <div class="wil-alert wil-alert--danger">
                    <i class="fas fa-exclamation-triangle wil-icon-spacing-sm"></i>
                    اسم المستخدم أو كلمة المرور غير صحيحة.
                </div>
            }

            <!-- Success message for password reset -->
            <div class="wil-alert wil-alert--success" id="wil-reset-success-alert" style="display: none;">
                <i class="fas fa-check-circle wil-icon-spacing-sm"></i>
                <strong>تم إرسال رابط الاستعادة بنجاح!</strong><br>
                تم إرسال رابط استعادة كلمة المرور إلى بريدك الإلكتروني. يرجى فحص بريدك الإلكتروني واتباع التعليمات.
            </div>

            <form method="post" asp-action="Login">
                @Html.AntiForgeryToken()

                <div class="wil-mb-3">
                    <label asp-for="UserName" class="wil-form-label">
                        <i class="fas fa-user wil-icon-spacing-sm"></i>
                        اسم المستخدم:
                    </label>
                    <input asp-for="UserName" class="form-control wil-form-control" placeholder="أدخل اسم المستخدم" />
                </div>

                <div class="wil-mb-3">
                    <label asp-for="PassWord" class="wil-form-label">
                        <i class="fas fa-lock wil-icon-spacing-sm"></i>
                        كلمة المرور:
                    </label>
                    <input asp-for="PassWord" class="form-control wil-form-control" type="password" placeholder="أدخل كلمة المرور" />
                </div>

                <div class="wil-form-check">
                    <input type="checkbox" class="form-check-input wil-form-check-input" id="wil-remember-me" />
                    <label class="form-check-label wil-form-check-label" for="wil-remember-me">
                        تذكرني
                    </label>
                </div>

                <button type="submit" class="btn wil-btn-primary">
                    <i class="fa fa-sign-in-alt wil-icon-spacing"></i>
                    تسجيل الدخول
                </button>

                <a href="/Auth/ForgotPassword" class="wil-link wil-link--forgot-password">
                    <i class="fas fa-key wil-icon-spacing-sm"></i>
                    نسيت كلمة المرور؟
                </a>
            </form>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Check for reset success message
            const urlParams = new URLSearchParams(window.location.search);
            const resetSuccess = urlParams.get('resetSuccess');

            if (resetSuccess === 'true') {
                const successAlert = document.getElementById('wil-reset-success-alert');
                successAlert.style.display = 'block';

                // Auto-hide success message after 8 seconds
                setTimeout(function () {
                    successAlert.style.opacity = '0';
                    successAlert.style.transform = 'translateY(-20px)';
                    setTimeout(function () {
                        successAlert.style.display = 'none';
                    }, 300);
                }, 8000);

                // Clean up URL
                if (window.history && window.history.pushState) {
                    const newUrl = window.location.protocol + "//" + window.location.host + window.location.pathname;
                    window.history.pushState({ path: newUrl }, '', newUrl);
                }
            }
        });
    </script>
</body>
</html>