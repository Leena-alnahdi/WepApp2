@model WepApp2.Models.User
@{
    Layout = null;
    ViewData["Title"] = "استعادة كلمة المرور - معمل الابتكارات";
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@300;400;500;700&display=swap" rel="stylesheet">
    <style>
        * {
            direction: rtl;
            text-align: right;
        }

        body {
            background: linear-gradient(135deg, #38a169 0%, #2d8a57 50%, #1e5f3a 100%);
            font-family: 'Tajawal', sans-serif;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .header-title {
            text-align: center;
            color: white;
            margin-bottom: 30px;
            text-shadow: 0 2px 4px rgba(0,0,0,0.3);
        }

        .logo-container {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 15px;
        }

        .logo {
            max-width: 200px;
            max-height: 120px;
            width: auto;
            height: auto;
            filter: drop-shadow(0 4px 8px rgba(0,0,0,0.3));
            transition: all 0.3s ease;
        }

            .logo:hover {
                transform: scale(1.05);
                filter: drop-shadow(0 6px 12px rgba(0,0,0,0.4));
            }

        .header-title h6 {
            font-size: 1rem;
            font-weight: 300;
            opacity: 0.9;
        }

        .auth-box {
            background: rgba(255, 255, 255, 0.98);
            padding: 50px 40px;
            border-radius: 25px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.3);
            max-width: 520px;
            margin: 0 auto;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .reset-header {
            text-align: center;
            margin-bottom: 2.5rem;
        }

        .reset-icon {
            width: 90px;
            height: 90px;
            background: linear-gradient(45deg, #38a169, #2d8a57);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            font-size: 2.5rem;
            color: white;
            box-shadow: 0 10px 40px rgba(56, 161, 105, 0.4);
            animation: pulse 2s ease-in-out infinite;
        }

        @@keyframes pulse {
            0%, 100% {
                transform: scale(1);
                box-shadow: 0 10px 40px rgba(56, 161, 105, 0.4);
            }

            50% {
                transform: scale(1.05);
                box-shadow: 0 15px 50px rgba(56, 161, 105, 0.5);
            }
        }

        .reset-header h3 {
            color: #38a169;
            margin-bottom: 0.75rem;
            font-size: 1.75rem;
            font-weight: 700;
        }

        .reset-header p {
            color: #666;
            font-size: 1.05rem;
            line-height: 1.6;
            margin-bottom: 0;
        }

        .form-label {
            font-weight: 500;
            color: #2c3e50;
            margin-bottom: 8px;
            display: block;
            text-align: right;
        }

        .form-control {
            border: 2px solid #e9ecef;
            border-radius: 12px;
            padding: 12px 16px;
            font-size: 16px;
            transition: all 0.3s ease;
            background: #f8f9fa;
            text-align: right;
            direction: rtl;
        }

            .form-control:focus {
                border-color: #38a169;
                box-shadow: 0 0 0 0.2rem rgba(56, 161, 105, 0.25);
                background: white;
            }

            .form-control::placeholder {
                color: #adb5bd;
                text-align: right;
            }

        .form-text {
            color: #6c757d;
            font-size: 0.875rem;
            margin-top: 0.5rem;
            text-align: right;
        }

        .btn-reset {
            background: linear-gradient(45deg, #38a169, #2d8a57);
            border: none;
            color: white;
            padding: 14px 30px;
            font-size: 16px;
            font-weight: 600;
            border-radius: 12px;
            width: 100%;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(56, 161, 105, 0.3);
            position: relative;
            overflow: hidden;
            margin-bottom: 20px;
        }

            .btn-reset::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(45deg, transparent, rgba(255,255,255,0.2), transparent);
                transition: left 0.5s ease;
            }

            .btn-reset:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(56, 161, 105, 0.4);
                background: linear-gradient(45deg, #2d8a57, #1e5f3a);
            }

                .btn-reset:hover::before {
                    left: 100%;
                }

            .btn-reset:active {
                transform: translateY(0);
            }

        .back-link {
            color: #38a169;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
            text-align: center;
            display: block;
            font-size: 16px;
        }

            .back-link:hover {
                color: #2d8a57;
                text-decoration: underline;
            }

        .alert {
            border-radius: 12px;
            border: none;
            text-align: right;
            font-weight: 500;
            margin-bottom: 25px;
        }

        .alert-success {
            background: linear-gradient(45deg, #10b981, #059669);
            color: white;
            box-shadow: 0 4px 15px rgba(16, 185, 129, 0.3);
        }

        .alert-danger {
            background: linear-gradient(45deg, #dc3545, #c82333);
            color: white;
            box-shadow: 0 4px 15px rgba(220, 53, 69, 0.3);
        }

        .mb-3 {
            margin-bottom: 20px;
        }

        @@media (max-width: 576px) {
            .auth-box {
                margin: 20px;
                padding: 30px 25px;
            }

            .logo {
                max-width: 150px;
                max-height: 90px;
            }

            .reset-icon {
                width: 70px;
                height: 70px;
                font-size: 2rem;
            }

            .reset-header h3 {
                font-size: 1.5rem;
            }

            .reset-header p {
                font-size: 1rem;
            }
        }

        /* تأثير الحركة للصفحة */
        .auth-box {
            animation: slideUp 0.6s ease-out;
        }

        @@keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .header-title {
            animation: fadeIn 0.8s ease-out;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Loading state */
        .btn-reset.loading {
            position: relative;
            color: transparent;
        }

            .btn-reset.loading::after {
                content: "";
                position: absolute;
                width: 20px;
                height: 20px;
                top: 50%;
                left: 50%;
                margin: -10px 0 0 -10px;
                border: 3px solid white;
                border-radius: 50%;
                border-top-color: transparent;
                animation: spinner 0.6s linear infinite;
            }

        @@keyframes spinner {
            to {
                transform: rotate(360deg);
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header-title">
            <div class="logo-container">
                <img src="~/Images/logo.png" alt="شعار معمل الابتكارات" class="logo" />
            </div>
        </div>

        <div class="auth-box">
            <div class="reset-header">
                <div class="reset-icon">
                    <i class="fas fa-key"></i>
                </div>
                <h3>استعادة كلمة المرور</h3>
                <p>أدخل بريدك الإلكتروني الجامعي وسنرسل لك رابط لإعادة تعيين كلمة المرور</p>
            </div>

            @if (ViewBag.Success == true)
            {
                <div class="alert alert-success">
                    <i class="fas fa-check-circle me-2"></i>
                    تم إرسال رابط استعادة كلمة المرور إلى بريدك الإلكتروني بنجاح.
                </div>
            }

            @if (ViewBag.Error == true)
            {
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    البريد الإلكتروني غير مسجل في النظام، تأكد من صحة البريد الإلكتروني.
                </div>
            }

            <form id="resetForm" onsubmit="return false;">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">
                        <i class="fas fa-envelope me-2"></i>
                        البريد الإلكتروني الجامعي:
                    </label>
                    <input asp-for="Email" class="form-control" type="email" placeholder="example@kau.edu.sa" required />
                    <div class="form-text">يجب أن يكون البريد الإلكتروني مسجل مسبقاً في النظام</div>
                </div>

                <button type="submit" class="btn-reset" id="submitBtn">
                    <i class="fas fa-paper-plane me-2"></i>
                    إرسال رابط الاستعادة
                </button>

                <a href="/Auth/Login" class="back-link">
                    <i class="fas fa-arrow-right me-2"></i>
                    العودة لتسجيل الدخول
                </a>
            </form>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('resetForm');
            const submitBtn = document.getElementById('submitBtn');
            const emailInput = document.querySelector('input[type="email"]');

            // Email validation
            emailInput.addEventListener('input', function() {
                const email = this.value;
                if (email && !email.includes('@@kau.edu.sa') && !email.includes('@@stu.kau.edu.sa')) {
                    this.setCustomValidity('يجب استخدام البريد الإلكتروني الجامعي (@@kau.edu.sa أو @@stu.kau.edu.sa)');
                } else {
                    this.setCustomValidity('');
                }
            });

            // Form submission with loading state
            form.addEventListener('submit', function(e) {
                e.preventDefault();

                const email = emailInput.value.trim();

                // Validate email format
                if (!email || (!email.includes('@@kau.edu.sa') && !email.includes('@@stu.kau.edu.sa'))) {
                    alert('يرجى إدخال بريد إلكتروني جامعي صحيح');
                    return;
                }

                submitBtn.classList.add('loading');
                submitBtn.disabled = true;

                // Simulate API call - In real app, this would be server-side validation
                setTimeout(() => {
                    // Simulate email validation
                    // Valid emails for demo: admin@kau.edu.sa, test@stu.kau.edu.sa, student@stu.kau.edu.sa
                    const validEmails = [
                        'admin@@kau.edu.sa',
                        'test@@stu.kau.edu.sa',
                        'student@@stu.kau.edu.sa',
                        'professor@@kau.edu.sa'
                    ];

                    const isValidEmail = validEmails.includes(email) || email.endsWith('@@kau.edu.sa') || email.endsWith('@@stu.kau.edu.sa');

                    if (isValidEmail) {
                        // Redirect to login page with success message
                        window.location.href = '/Auth/Login?resetSuccess=true';
                    } else {
                        // Show error message and stay on page
                        submitBtn.classList.remove('loading');
                        submitBtn.disabled = false;

                        // Remove existing alerts
                        const existingAlerts = document.querySelectorAll('.alert');
                        existingAlerts.forEach(alert => alert.remove());

                        // Show error alert
                        const errorAlert = document.createElement('div');
                        errorAlert.className = 'alert alert-danger';
                        errorAlert.style.animation = 'slideUp 0.3s ease-out';
                        errorAlert.innerHTML = `
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            البريد الإلكتروني غير مسجل في النظام، تأكد من صحة البريد الإلكتروني.
                        `;

                        // Insert error alert
                        const resetHeader = document.querySelector('.reset-header');
                        resetHeader.insertAdjacentElement('afterend', errorAlert);

                        // Auto-hide error message after 6 seconds
                        setTimeout(() => {
                            errorAlert.style.opacity = '0';
                            errorAlert.style.transform = 'translateY(-20px)';
                            setTimeout(() => {
                                errorAlert.remove();
                            }, 300);
                        }, 6000);
                    }
                }, 1500);
            });

            // Auto-hide success/error messages after 5 seconds
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                setTimeout(() => {
                    alert.style.opacity = '0';
                    alert.style.transform = 'translateY(-20px)';
                    setTimeout(() => {
                        alert.style.display = 'none';
                    }, 300);
                }, 5000);
            });
        });
    </script>
</body>
</html>